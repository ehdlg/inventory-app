<%- include('./layout.ejs') %>
<body>
  <main>
    <div class="delete-form-container">
      <h2 class="form-title">Delete Game</h2>
      <p class="form-description">
        Are you sure you want to delete this game:
        <strong><%= game.name %></strong>?
      </p>
      <form action="<%= game.url %>/delete" method="POST">
        <input
          type="hidden"
          name="gameId"
          value="<%= game ? game._id : '' %>"
        />
        <div class="form-group">
          <button type="submit" class="delete-button">Delete Game</button>
          <a href="/games" class="cancel-link">Cancel</a>
        </div>
      </form>
    </div>
  </main>
</body>
